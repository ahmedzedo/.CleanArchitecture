@page
@model CleanArchitectureSample.Presentation.UI.Web.Areas.Packages.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchPackageRequest.Data.Name" class="control-label"></label>
                <input asp-for="SearchPackageRequest.Data.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SearchPackageRequest.Data.Description" class="control-label"></label>
                <input asp-for="SearchPackageRequest.Data.Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit"  value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SearchPackageResponse.Data.Results[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchPackageResponse.Data.Results[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SearchPackageResponse.Data.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

