@page
@model CleanArchitectureSample.Presentation.UI.Web.Areas.Packages.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <label>@Model.Message</label>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreatePackageRequest.Data.Name" class="control-label"></label>
                <input asp-for="CreatePackageRequest.Data.Name" class="form-control" />
                <span asp-validation-for="CreatePackageRequest.Data.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePackageRequest.Data.Description" class="control-label"></label>
                <input asp-for="CreatePackageRequest.Data.Description" class="form-control" />
                <span asp-validation-for="CreatePackageRequest.Data.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
